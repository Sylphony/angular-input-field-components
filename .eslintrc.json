{
    "env": {
        "browser": true,
        "node": true,
        "es6": true,
        "jasmine": true
    },
    "extends": [
        "eslint:recommended",
        "angular"
    ],
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            4,
            { "SwitchCase": 1 }
        ],
        "linebreak-style": [
            "off"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}
